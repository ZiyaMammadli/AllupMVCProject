@model List<Category>;
@{
    int counter = 0;
}
<div class="container">
    <div class="row">
        <div style="display:flex;justify-content:space-between;align-items:center;align-content:center;margin-top:20px;border:1px solid grey;padding:10px">
            <h3 style="margin-bottom:0">Categories</h3>
            <a class="btn-success" style="padding:10px;align-items:center;border-radius:10px" asp-controller="category" asp-action="create">Create</a>
        </div>
        <table class="table table-striped" style="margin-top:40px;border:1px solid grey">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Activate</th>
                    <th scope="col">Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@category.Name</td>
                        <td>@category.IsActivated</td>
                        <td>
                            <img style="width:150px" src="~/uploads/Categories/@category.ImageUrl" alt="Alternate Text" />
                        </td>
                        <td>
                            <div style="display:flex;">
                                <a style="margin-right:10px;color:white" class="btn btn-warning" asp-controller="category" asp-action="update" asp-route-id="@category.Id">Update</a>
                                <a style="color:white" class="btn btn-danger deleteButton" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>